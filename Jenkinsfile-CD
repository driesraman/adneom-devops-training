pipeline {
  agent any
  environment {
      registry = "ffurlanetto"
    }
  stages {
    stage('Deploy') {
      agent {
        docker {
          alwaysPull true
          args '-e HOME=/tmp -u root:root'
          image 'mullnerz/ansible-playbook'
        }
      }
      steps {
        ansiblePlaybook become: true, credentialsId: 'vagrant', disableHostKeyChecking: true, inventory: 'playbook/inventory/localhost', playbook: 'playbook/deploy.yml'
      }
    }
  }
}